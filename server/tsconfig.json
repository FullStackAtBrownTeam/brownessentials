{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noEmit": false,
        "outDir": "build",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./"],
    "exclude": ["build", "node_modules", "**/*.spec.ts"]
}
